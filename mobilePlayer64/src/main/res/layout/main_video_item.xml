<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp" >

    <!-- icon -->

    <ImageView
        android:id="@+id/main_video_item_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/video_default_icon" />
    <!-- 文件名 -->

    <TextView
        android:id="@+id/main_video_item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/main_video_item_tv_size"
        android:layout_toRightOf="@+id/main_video_item_iv_icon"
        android:singleLine="true"
        android:text="文件名"
        android:textColor="@color/white"
        android:textSize="18sp" />
    <!-- 视频时间长度 -->

    <TextView
        android:id="@+id/main_video_item_tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_video_item_tv_title"
        android:layout_below="@+id/main_video_item_tv_title"
        android:text="时间长度"
        android:textColor="@color/halfwhite"
        android:textSize="16sp" />
    <!-- 文件大小 -->

    <TextView
        android:id="@+id/main_video_item_tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/main_video_item_tv_title"
        android:text="文件大小"
        android:textColor="@color/halfwhite"
        android:textSize="16sp" />

</RelativeLayout>